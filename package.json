{
  "name": "ethanede",
  "version": "1.0.0",
  "description": "Ethan Ede WordPress Theme",
  "scripts": {
    "scss": "sass assets/scss/main.scss assets/css/main.css",
    "tailwind": "npx tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/tailwind-output.css --minify",
    "build": "npm run scss && npm run tailwind && cat assets/css/tailwind-output.css assets/css/main.css > assets/css/style.css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.5",
    "postcss-cli": "^11.0.0",
    "sass": "^1.89.2",
    "tailwindcss": "^3.4.17"
  }
}
