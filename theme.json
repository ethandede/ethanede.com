{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#2563eb",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#64748b",
          "name": "Secondary"
        },
        {
          "slug": "accent",
          "color": "#06b6d4",
          "name": "Accent"
        },
        {
          "slug": "text-primary",
          "color": "#1e293b",
          "name": "Text Primary"
        },
        {
          "slug": "text-secondary",
          "color": "#64748b",
          "name": "Text Secondary"
        },
        {
          "slug": "background",
          "color": "#ffffff",
          "name": "Background"
        },
        {
          "slug": "surface",
          "color": "#f8fafc",
          "name": "Surface"
        },
        {
          "slug": "border",
          "color": "#e2e8f0",
          "name": "Border"
        }
      ],
      "gradients": [
        {
          "slug": "primary-gradient",
          "gradient": "linear-gradient(135deg, #2563eb 0%, #06b6d4 100%)",
          "name": "Primary Gradient"
        },
        {
          "slug": "subtle-gradient",
          "gradient": "linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%)",
          "name": "Subtle Gradient"
        }
      ],
      "duotone": [
        {
          "colors": ["#2563eb", "#06b6d4"],
          "slug": "primary-duotone",
          "name": "Primary Duotone"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
          "slug": "primary",
          "name": "Primary (Roboto)"
        },
        {
          "fontFamily": "Merriweather, Georgia, serif",
          "slug": "secondary", 
          "name": "Secondary (Merriweather)"
        },
        {
          "fontFamily": "'JetBrains Mono', 'Courier New', monospace",
          "slug": "monospace",
          "name": "Monospace"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Small"
        },
        {
          "slug": "normal",
          "size": "1rem",
          "name": "Normal"
        },
        {
          "slug": "medium",
          "size": "1.125rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.25rem",
          "name": "Large"
        },
        {
          "slug": "xl",
          "size": "1.5rem",
          "name": "Extra Large"
        },
        {
          "slug": "xxl",
          "size": "2rem",
          "name": "2X Large"
        },
        {
          "slug": "xxxl",
          "size": "2.5rem",
          "name": "3X Large"
        }
      ],
      "lineHeight": true,
      "letterSpacing": true,
      "textDecoration": true,
      "textTransform": true,
      "dropCap": false
    },
    "spacing": {
      "spacingSizes": [
        {
          "size": "0.5rem",
          "slug": "small",
          "name": "Small"
        },
        {
          "size": "1rem", 
          "slug": "medium",
          "name": "Medium"
        },
        {
          "size": "1.5rem",
          "slug": "large",
          "name": "Large"
        },
        {
          "size": "2rem",
          "slug": "xl",
          "name": "Extra Large"
        },
        {
          "size": "3rem",
          "slug": "xxl",
          "name": "2X Large"
        }
      ],
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    },
    "shadow": {
      "presets": [
        {
          "slug": "card",
          "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
          "name": "Card Shadow"
        },
        {
          "slug": "hover",
          "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
          "name": "Hover Shadow"
        },
        {
          "slug": "large",
          "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
          "name": "Large Shadow"
        }
      ]
    },
    "layout": {
      "contentSize": "768px",
      "wideSize": "1200px"
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--text-primary)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--primary)",
      "fontSize": "var(--wp--preset--font-size--normal)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "blockGap": "var(--wp--preset--spacing--medium)"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--secondary)",
          "fontWeight": "600",
          "lineHeight": "1.2"
        },
        "color": {
          "text": "var(--wp--preset--color--text-primary)"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xxxl)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xxl)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xl)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--normal)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--accent)"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--background)"
        },
        "border": {
          "radius": "0.375rem"
        },
        "spacing": {
          "padding": {
            "top": "0.75rem",
            "bottom": "0.75rem",
            "left": "1.5rem",
            "right": "1.5rem"
          }
        },
        "typography": {
          "fontWeight": "500"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--accent)"
          }
        }
      }
    },
    "blocks": {
      "core/paragraph": {
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--medium)"
          }
        }
      },
      "core/heading": {
        "spacing": {
          "margin": {
            "top": "var(--wp--preset--spacing--large)",
            "bottom": "var(--wp--preset--spacing--medium)"
          }
        }
      },
      "core/image": {
        "border": {
          "radius": "0.5rem"
        }
      },
      "core/code": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--monospace)"
        },
        "color": {
          "background": "var(--wp--preset--color--surface)",
          "text": "var(--wp--preset--color--text-primary)"
        },
        "border": {
          "radius": "0.375rem"
        },
        "spacing": {
          "padding": {
            "top": "1rem",
            "bottom": "1rem",
            "left": "1rem",
            "right": "1rem"
          }
        }
      },
      "core/quote": {
        "border": {
          "left": {
            "width": "4px",
            "color": "var(--wp--preset--color--primary)"
          }
        },
        "spacing": {
          "padding": {
            "left": "var(--wp--preset--spacing--large)"
          }
        },
        "typography": {
          "fontStyle": "italic"
        }
      }
    }
  },
  "customTemplates": [
    {
      "name": "portfolio-archive",
      "title": "Portfolio Archive",
      "postTypes": ["project"]
    },
    {
      "name": "single-project",
      "title": "Single Project",
      "postTypes": ["project"]
    },
    {
      "name": "single-deliverable", 
      "title": "Single Deliverable",
      "postTypes": ["deliverable"]
    }
  ],
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer", 
      "area": "footer"
    },
    {
      "name": "sidebar",
      "title": "Sidebar",
      "area": "uncategorized"
    }
  ]
}